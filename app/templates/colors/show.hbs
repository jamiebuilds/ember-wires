<div class="page-header">
  <div class="btn-toolbar pull-right" role="toolbar">
    <div class="btn-group">
      <button class="colors__destroy btn btn-danger" {{action "destroy" model}}>Destroy</button>
    </div>
    <div class="btn-group">
      <button class="colors__toggle btn btn-default">{{#unless active}}Activate{{else}}Deactivate{{/unless}}</button>
      {{#link-to "colors.edit" model classNames="btn btn-default"}}Edit{{/link-to}}
    </div>
  </div>
  <h1>Colors: Show</h1>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <div class="colors__thumbnail"></div>
    </div>
  </div>

  <div class="col-md-9">
    <div class="list-group">
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Name</h4>
        <p class="list-group-item-text">{{name}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">Hex</h4>
        <p class="list-group-item-text">{{hex}}</p>
      </div>
      <div class="list-group-item">
        <h4 class="list-group-item-heading">State</h4>
        <p class="list-group-item-text">{{#if active}}Active{{else}}Inactive{{/if}}</p>
      </div>
    </div>
  </div>
</div>
